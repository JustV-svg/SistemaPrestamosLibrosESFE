@model IEnumerable<Library.DataAccess.Domain.Personal>
@{
    ViewData["Title"] = "Personal"; 
    int numPage = 1;
    int numRegistros = 0;
    int numRegistrosPorPage = 10;
    int[] tops = { 10, 20, 50, 100, 500, 1000, 10000, -1 };
    int topActual = Convert.ToInt32(ViewBag.Top);
}

<style>
    /* ---------------------------------------------------- */
    /* Mismos estilos CSS para el diseño y las animaciones */
    /* ---------------------------------------------------- */
    body {
        overflow-x: hidden;
    }

    .spacer {
        margin-right: 20px;
    }

    #contenedor-principal {
        border-radius: 0.5rem;
    }

    #contenedor-principal {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

        #contenedor-principal:hover {
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
            border: 1px solid #e5e7eb;
        }

    #btn-create {
        transition: all 0.3s ease;
    }

        #btn-create:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
        }

    .fade-page {
        opacity: 0;
        transition: opacity 0.5s ease;
    }

        .fade-page.show {
            opacity: 1;
        }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 15px;
        gap: 5px;
    }

    .page-btn {
        display: inline-block;
        padding: 6px 12px;
        border: 1px solid #d1d5db;
        background-color: #f9fafb;
        color: #374151;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        transition: all 0.2s ease;
    }

        .page-btn:hover {
            background-color: #e5e7eb;
            color: #111827;
        }

        .page-btn.active {
            background-color: #d1d5db;
            color: #111827;
            font-weight: bold;
            border-color: #9ca3af;
        }

    #suggestionsContainer .suggestion-item:hover {
        background-color: #f0f0f0;
    }

    .anchoAccionesLibro .btn {
        min-width: 80px;
        margin-right: 5px;
    }

    .anchoAccionesLibro > div {
        display: flex;
        gap: 5px;
    }

    .status-badge {
        display: inline-block;
        padding: 0.3em 0.6em;
        font-size: 75%;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        white-space: nowrap;
        vertical-align: baseline;
        border-radius: 0.25rem;
    }

    .status-active {
        color: #155724;
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
    }

    .status-inactive {
        color: #721c24;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
    }


    @@media (max-width: 768px) {
        .form-busqueda {
            flex-direction: column !important;
            align-items: stretch !important;
        }

        .spacer {
            margin-right: 0 !important;
            margin-bottom: 10px !important;
        }

        #btn-create {
            width: 100% !important;
            margin-bottom: 15px;
        }

        .anchoAccionesLibro .btn {
            display: block;
            width: 100%;
            margin-bottom: 5px;
        }

        table.table td,
        table.table th {
            font-size: 14px;
            white-space: nowrap;
        }

        .table-responsive {
            overflow-x: auto;
        }
    }
</style>

<div class="card" id="contenedor-principal">
    <div class="card-body">
        <h1 style="padding:15px; font-family: 'Poppins', sans-serif; font-weight: 600; margin-left: -15px;">@ViewData["Title"]</h1>
        <div class="row g-2 mb-3 align-items-center">
            <div class="col-12 col-md-auto">
                <a asp-action="Create" class="btn btn-success w-100" id="btn-create">
                    <i class="bi bi-plus-square"></i> Crear Nuevo
                </a>
            </div>
            <div class="col">
                <form asp-action="Index" class="d-flex form-busqueda flex-wrap" method="get">
                    <div class="spacer" style="position: relative;">
                        <input type="text"
                               placeholder="Buscar por nombre"
                               class="form-control"
                               name="Name" @* ⬅️ Nombre de la propiedad del modelo Docentes *@
                               id="docenteNameInput" @* ⬅️ ID del input actualizado *@
                               autocomplete="off"
                               value="@Context.Request.Query["Name"]" />
                        <div id="suggestionsContainer"
                             style="position: absolute; top: 100%; left: 0; right: 0; background: white; border: 1px solid #ddd; border-top: none; display: none; z-index: 1000; max-height: 200px; overflow-y: auto;"></div>
                    </div>
                    <div class="spacer d-flex align-items-center">
                        <label class="control-label me-2">Top</label>
                        <select name="top_aux" class="form-control">
                            @foreach (var item in tops)
                            {
                                string strItem = item != -1 ? item.ToString() : "Todos";
                                string selected = item == topActual ? "selected" : "";
                                <option value="@item" selected="@selected">@strItem</option>
                            }
                        </select>
                    </div>
                    <div class="spacer">
                        <button type="submit" class="btn btn-secondary">
                            <i class="bi bi-reply-fill"></i> Buscar
                        </button>
                    </div>
                    <input type="hidden" name="page" value="@ViewBag.PaginaActual" />
                </form>
            </div>
        </div>
        <hr />
        <div class="table-responsive fade-page show" id="tableContainer">
            <table id="customers" class="table">
                <thead>
                    <tr>
                        <th class="borIz">@Html.DisplayNameFor(model => model.First().PERSONAL_ID)</th> @* ⬅️ Ajustado a Id *@
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th> @* ⬅️ Ajustado a TeacherName *@
                        <th>@Html.DisplayNameFor(model => model.First().LastName)</th> @* ⬅️ Ajustado a TeacherLastName *@
                        <th>@Html.DisplayNameFor(model => model.First().CellPhone)</th> @* ⬅️ Ajustado a CellPhone *@
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th> @* ⬅️ Ajustado a Email *@
                        <th>@Html.DisplayNameFor(model => model.First().Rol)</th> @* ⬅️ Ajustado a Email *@
                        <th class="borDer">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PERSONAL_ID</td> @* ⬅️ Ajustado a Id *@
                            <td>@item.Name</td> @* ⬅️ Ajustado a TeacherName *@
                            <td>@item.LastName</td> @* ⬅️ Ajustado a TeacherLastName *@
                            <td>@item.CellPhone</td> @* ⬅️ Ajustado a CellPhone *@
                            <td>@item.Email</td> @* ⬅️ Ajustado a Email *@
                            <td>@item.Rol</td> @* ⬅️ Ajustado a Rol*@
                            <td class="anchoAccionesLibro">
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.PERSONAL_ID" class="btn btn-info" style="background: #1D4ED8">
                                        @* ⬅️ Ajustado a Id *@
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                        </svg>
                                        Editar
                                    </a>
                                    <a href="javascript:void(0)" onclick="confirmDelete(@item.PERSONAL_ID)" class="btn btn-danger" style="background-color: #cc2649">
                                        @* ⬅️ Ajustado a Id *@
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 0 .998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                        </svg>
                                        Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (ViewBag.TotalPaginas > 1)
        {
            <nav class="pagination-container">
                @if (ViewBag.PaginaActual > 1)
                {
                    <a class="page-btn" asp-action="Index" asp-route-page="@(ViewBag.PaginaActual - 1)" asp-route-Name="@Context.Request.Query["Name"]" asp-route-top_aux="@Context.Request.Query["top_aux"]">Anterior</a> @* ⬅️ Ajustado a TeacherName *@
                }
                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <a class="page-btn @(i == ViewBag.PaginaActual ? "active" : "")" asp-action="Index" asp-route-page="@i" asp-route-Name="@Context.Request.Query["Name"]" asp-route-top_aux="@Context.Request.Query["top_aux"]">@i</a> @* ⬅️ Ajustado a TeacherName *@
                }
                @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
                {
                    <a class="page-btn" asp-action="Personal" asp-route-page="@(ViewBag.PaginaActual + 1)" asp-route-Name="@Context.Request.Query["Name"]" asp-route-top_aux="@Context.Request.Query["top_aux"]">Siguiente</a> @* ⬅️ Ajustado a TeacherName *@
                }
            </nav>
        }
        <form style="display:none;">
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Función de confirmación de eliminación
        function confirmDelete(docenteId) { // ⬅️ Renombrado de authorId a docenteId
            Swal.fire({
                title: '¿Estás seguro?',
                text: "¡No podrás revertir esto!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#EF4444',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar Personal', // ⬅️ Texto actualizado
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // ⬅️ Ruta del controlador Docente actualizada
                    fetch(`/Personal/Delete/${docenteId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire(
                                '¡Personal Eliminado!', // ⬅️ Texto actualizado
                                data.message,
                                'success'
                            ).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire(
                                'Error',
                                data.message,
                                'error'
                            );
                        }
                    })
                    .catch(error => {
                        Swal.fire(
                            'Error',
                            'Ocurrió un error al intentar eliminar el Personal.', // ⬅️ Texto actualizado
                            'error'
                        );
                    });
                }
            });
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const container = document.getElementById("tableContainer");
            setTimeout(() => container.classList.add("show"), 50);

            // --- Lógica de autocompletado adaptada ---
            const docenteNameInput = document.getElementById("docenteNameInput"); // ⬅️ ID del input actualizado
            const suggestionsContainer = document.getElementById("suggestionsContainer");

            docenteNameInput.addEventListener("input", async () => {
                const query = docenteNameInput.value.trim();
                if (query.length < 1) {
                    suggestionsContainer.style.display = "none";
                    return;
                }

                try {
                    // ⬅️ Ruta del controlador Docente actualizada
                    const response = await fetch(`/Personal/Search?nombre=${encodeURIComponent(query)}`);
                    const suggestions = await response.json();

                    if (suggestions.length > 0) {
                        suggestionsContainer.innerHTML = suggestions
                            .map(suggestion => `
                                <div class="suggestion-item"
                                    style="padding: 8px; cursor: pointer;"
                                    onclick="selectSuggestion('${suggestion.nombreCompleto.replace(/'/g, "\\'")}')"> @* ⬅️ Ajustado a nombreCompleto y escape de comillas *@
                                    ${suggestion.nombreCompleto}
                                </div>
                            `)
                            .join("");
                        suggestionsContainer.style.display = "block";
                    } else {
                        suggestionsContainer.style.display = "none";
                    }
                } catch (error) {
                    console.error("Error al obtener sugerencias:", error);
                    suggestionsContainer.style.display = "none";
                }
            });

            // Ocultar sugerencias si se hace clic fuera del campo
            document.addEventListener("click", (e) => {
                if (e.target !== docenteNameInput) {
                    suggestionsContainer.style.display = "none";
                }
            });

            // --- Animación en paginación ---
            document.querySelectorAll(".page-btn").forEach(link => {
                link.addEventListener("click", function (e) {
                    e.preventDefault();
                    container.classList.remove("show");
                    setTimeout(() => {
                        window.location.href = this.href;
                    }, 500);
                });
            });
        });

        // Función para seleccionar sugerencia        function selectSuggestion(suggestion) {
            document.getElementById("NameInput").value = suggestion; // ⬅️ ID del input actualizado
            document.getElementById("suggestionsContainer").style.display = "none";
        }
    </script>
    <script>
        $(document).ready(function() {
            @if (TempData["EditSuccess"] != null && (bool)TempData["EditSuccess"])
            {
                        <text>
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: 'El Personal ha sido editado correctamente.', // ⬅️ Texto actualizado
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Aceptar'
                            });
                        </text>
            }
        });
    </script>
    <script>
        $(document).ready(function() {
            @if (TempData["CreateSuccess"] != null && (bool)TempData["CreateSuccess"])
            {
                        <text>
                            Swal.fire({
                                icon: 'success',
                                title: '¡Éxito!',
                                text: 'El Personal se creó correctamente.', // ⬅️ Texto actualizado
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Aceptar'
                            });
                        </text>
            }
        });
    </script>
}