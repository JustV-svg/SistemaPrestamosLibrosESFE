@model Library.DataAccess.Domain.Personal
@{
    ViewData["Title"] = "Editar Personal";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<style>
    #contenedor-principal {
        border-radius: 1rem;
    }

    @@media (max-width: 768px) {
        .margenEdit {
            padding: 0 10px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            font-size: 16px;
        }
    }

    .form-label {
        font-weight: 500;
    }
</style>

<div class="card" id="contenedor-principal">
    <div class="card-body">
        <div class="container-fluid">
            <h1 class="card-title text-center"
                style="font-family:'Poppins', sans-serif; font-weight:600;">
                Editar Personal
            </h1>
            <hr />

            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 margenEdit">

                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="PERSONAL_ID" type="hidden" />

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control"
                                       placeholder="Nombre del Personal" />
                                <span asp-validation-for="Name"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control"
                                       placeholder="Apellido del Personal" />
                                <span asp-validation-for="LastName"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Rol" class="form-label"></label>
                                <input asp-for="Rol" class="form-control"
                                       placeholder="Rol" />
                                <span asp-validation-for="Rol"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="email"
                                       class="form-control"
                                       placeholder="Correo electrónico" />
                                <span asp-validation-for="Email"
                                      class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CellPhone" class="form-label"></label>
                                <input asp-for="CellPhone" type="tel"
                                       class="form-control"
                                       placeholder="Teléfono" />
                                <span asp-validation-for="CellPhone"
                                      class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-floppy"></i> Guardar Cambios
                            </button>

                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-reply-fill"></i> Regresar
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelector('.main-content')
            ?.classList.remove('with-menu');
        document.querySelector('.main-content')
            ?.classList.add('full-width');
    </script>
}
